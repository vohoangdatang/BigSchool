@{
    ViewBag.Title = "Home Page";
}

@model IEnumerable<VoHoangDat_1811060166.Models.Course>
@{ 
    ViewBag.Title = "Home Page";
}




<ul class="course">
    @foreach (var course in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.Datetime.ToString("MM")
                        </div>
                        <div class="day">
                            @course.Datetime.ToString("dd")
                        </div>
                    </div>
                    <div class="details">
                        <span class="lecturer">
                            @course.Lecturer.Name
                        </span>
                        <span class="category">
                            @course.Category.Name
                        </span>
                    </div>
                </li>
            }
</ul>